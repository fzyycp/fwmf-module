<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="reflectTables" targetRuntime="MyBatis3">
        <!--文件编码-->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!--fwmf generator配置-->
        <fwmfGenerator targetPackage="cn.faury.fwmf.module"
                       targetProject=".\src\generator\java"
                       modelName="product"
                       enableGeneratorModifiableMvc="true"
        />
        <!--自定义插件-->
        <plugin type="cn.faury.fwmf.generator.plugins.ModifiableMvcPlugin">
            <property name="targetProject" value=".\src\generator\java"/>
            <property name="targetBasePackage" value="cn.faury.fwmf.module"/>
            <property name="modelKeyName" value="product"/>
        </plugin>
        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://128.0.9.252:3306/ftpl"
                        userId="root" password="888888">
            <property name="remarks" value="true"/>
            <property name="useInformationSchema" value="true"/>
        </jdbcConnection>

        <!-- 指定数据库表，对应的表生成的Controller、Service、Mapper、SQLProvider模块名,table的简化，与下面的配置等效 -->
        <fwmfTable tableName="product_t_category_info" modelKey="CategoryInfo">
            <generatedKey column="PRODUCT_CATEGORY_ID" sqlStatement="JDBC"/>
        </fwmfTable>
        <fwmfTable tableName="product_t_category_r_system" modelKey="CategoryRSystem">
            <generatedKey column="ID" sqlStatement="JDBC"/>
        </fwmfTable>
        <fwmfTable tableName="product_t_category_r_tag" modelKey="CategoryRTag">
            <generatedKey column="ID" sqlStatement="JDBC"/>
        </fwmfTable>
        <fwmfTable tableName="product_t_tag_info" modelKey="TagInfo">
            <generatedKey column="TAG_ID" sqlStatement="JDBC"/>
        </fwmfTable>
        <fwmfTable tableName="product_t_tag_r_system" modelKey="TagRSystem">
            <generatedKey column="ID" sqlStatement="JDBC"/>
        </fwmfTable>
        <!--<fwmfTable tableName="sys_t_sensitive_info" modelKey="SensitiveInfo">-->
            <!--<generatedKey column="SENSITIVE_ID" sqlStatement="JDBC"/>-->
        <!--</fwmfTable>-->
    </context>
</generatorConfiguration>
